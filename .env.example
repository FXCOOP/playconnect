# ========================================
# PlayConnect Environment Variables
# ========================================
# Copy this file to .env.local and fill in the values

# ----------------------------------------
# Database
# ----------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/playconnect?schema=public"

# ----------------------------------------
# NextAuth.js Configuration
# ----------------------------------------
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ----------------------------------------
# OAuth Providers
# ----------------------------------------
# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ----------------------------------------
# Email Service (Resend)
# ----------------------------------------
# Get API key from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="PlayConnect <noreply@playconnect.app>"

# ----------------------------------------
# File Storage (Supabase)
# ----------------------------------------
# Get these from https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ----------------------------------------
# Real-time Messaging (Pusher)
# ----------------------------------------
# Get credentials from https://dashboard.pusher.com/
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="your-app-id"
PUSHER_SECRET="your-pusher-secret"

# ----------------------------------------
# Geolocation
# ----------------------------------------
# Default location for demo/testing
DEFAULT_LAT="37.7749"
DEFAULT_LNG="-122.4194"

# ----------------------------------------
# Application Configuration
# ----------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="PlayConnect"

# Feature Flags
ENABLE_GROUPS="true"
ENABLE_MESSAGING="true"
ENABLE_ADMIN_PANEL="true"

# Rate Limiting (per user)
RATE_LIMIT_PROPOSALS_PER_DAY="10"
RATE_LIMIT_MESSAGES_PER_HOUR="50"
RATE_LIMIT_API_CALLS_PER_MINUTE="100"

# ----------------------------------------
# Matching Algorithm Configuration
# ----------------------------------------
# Weights for matching algorithm (must sum to 1.0)
MATCHING_WEIGHT_INTERESTS="0.45"
MATCHING_WEIGHT_AGE="0.20"
MATCHING_WEIGHT_DISTANCE="0.15"
MATCHING_WEIGHT_AVAILABILITY="0.15"
MATCHING_WEIGHT_SAFETY="0.05"

# Default matching radius in kilometers
DEFAULT_MATCH_RADIUS_KM="8"

# Maximum age difference in months for matching
MAX_AGE_DIFFERENCE_MONTHS="24"

# ----------------------------------------
# Privacy & Security
# ----------------------------------------
# H3 geohash resolution (7 = ~5km hexagons)
GEOHASH_RESOLUTION="7"

# Photo blur by default until consent
DEFAULT_BLUR_PHOTOS="true"

# Data retention in days
MESSAGE_RETENTION_DAYS="90"

# Maximum photo upload size in MB
MAX_PHOTO_SIZE_MB="2"

# ----------------------------------------
# Development & Testing
# ----------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL="info"

# Enable debug mode
DEBUG="false"

# Seed database on startup (development only)
AUTO_SEED="false"

# ----------------------------------------
# Production Settings (Optional)
# ----------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# Analytics
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# CDN for assets
# NEXT_PUBLIC_CDN_URL="https://cdn.playconnect.app"
